@model MatheusinAppWeb.Models.ClienteModel

<div class="container d-flex align-content-center flex-column">
    <div class="row">

        <div class="col-4 mx-auto">
            @if (TempData["Erro"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["Erro"]
                </div>
            }
            <div class="card">
                <div class="card-header">
                    Cadastro do Cliente
                </div>
                <div class="card-body">
                    <form action="/Cliente/SalvarDados" method="post">
                        <label>Nome</label>
                        <input type="text" name="Nome" class="form-control" value="@Model.Nome" />
                        <br />
                        <label>Telefone</label>
                        <input type="text" name="Telefone" class="form-control" value="@Model.Telefone" />
                        <br/>
                        <button type="submit" class="btn btn-dark">Salvar Cliente</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>